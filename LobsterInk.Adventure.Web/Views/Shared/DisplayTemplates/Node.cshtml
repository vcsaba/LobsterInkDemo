@model LobsterInk.Adventure.Shared.Models.Node

@if (Model.IsSelected)
{
    <strong>@Model.Details -> @Model.Message</strong>
}
else
{
    <div>@Model.Details -> @Model.Message</div>
}

@if (Model.Children != null)
{
    <ol>
        @foreach (var child in Model.Children)
        {
            <li>@Html.DisplayFor(y => child)</li>
        }
    </ol>
}
